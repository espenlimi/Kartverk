@model WebApplication1.Data.GeoChange

@{
    ViewData["Title"] = "Edit Geo Change";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Hidden input for Id -->
    <input type="hidden" asp-for="Id" />

    <!-- Hidden input for UserId (newly added) -->
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GeoJson"></label>
        <textarea asp-for="GeoJson" class="form-control"></textarea>
        <span asp-validation-for="GeoJson" class="text-danger"></span>
    </div>
    <br />
    <br />

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
