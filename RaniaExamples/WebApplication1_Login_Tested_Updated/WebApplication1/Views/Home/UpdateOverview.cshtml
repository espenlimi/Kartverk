@model IEnumerable<WebApplication1.Data.GeoChange>

@{
    ViewData["Title"] = "Geo Changes Overview";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Description</th>
            <th>GeoJsonData</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var change in Model)
            {
                <tr>
                    <td>@change.Description</td>
                    <td>@change.GeoJson</td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@change.Id">Edit</a> |
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@change.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No data available.</td>
            </tr>
        }
    </tbody>
</table>
